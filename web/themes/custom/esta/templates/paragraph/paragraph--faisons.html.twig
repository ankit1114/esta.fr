{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}

{% block paragraph %}
  {% block content %}
    {% if content.field_body_text['#items'].value|trim is not empty %}
      <div class="faisons">
        <div class="container">
          {{ content.field_body_text }}
        </div>
      </div>
    {% endif %}
  {% endblock %}
{% endblock paragraph %}
